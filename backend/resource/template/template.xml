<root>
  <state type='movies'>
    <static>
      <question id='1'>
        <string>Tell me a movie that you like?</string>
      </question>
    </static>
    <dynamic>
      <question id='1' dtype='choice'>
        <string>Do you prefer $(movies...), or $(movies)?</string>
        <choice_count>-1</choice_count>
        <replacements>
          <string>movies</string>
        </replacements>
      </question>
      <question id='2' dtype='choice'>
        <string>Which of the following movies would you prefer: $(movies...), or $(movies)?</string>
        <choice_count>-1</choice_count>
        <replacements>
          <string>movies</string>
        </replacements>
      </question>
      <question id='3' dtype='choice'>
        <string>Do you prefer $(movies) or $(movies)?</string>
        <choice_count>2</choice_count>
        <replacements>
          <string>movies</string>
        </replacements>
      </question>
    </dynamic>
  </state>
  <state type='genre'>
    <static>
      <question id='1'>
        <string>Tell me a genre you prefer?</string>
      </question>
      <question id='2'>
        <string>What are your movie interests?</string>
      </question>
      <question id='3'>
        <string>What is your favorite genre?</string>
      </question>
      <question id='4'>
        <string>What types of films do you like to see?</string>
      </question>
      <question id='5'>
        <string>I am trying to understand your genre preferences.</string>
      </question>
      <question id='6'>
        <string>Can you tell me some genres?</string>
      </question>
      <question id='7'>
        <string>Please tell me some genres you like.</string>
      </question>
      <question id='8'>
        <string>What types of movies, or genres, do you like?</string>
      </question>
    </static>
    <dynamic>
      <question id='1' dtype='choice'>
        <string>Do you prefer $(genre...), or $(genre)?</string>
        <choice_count>-1</choice_count>
        <replacements>
          <string>genre</string>
        </replacements>
      </question>
      <question id='2' dtype='choice'>
        <string>Which of the following genre would you prefer: $(genre...), or $(genre)?</string>
        <choice_count>-1</choice_count>
        <replacements>
          <string>genre</string>
        </replacements>
      </question>
      <question id='3' dtype='choice'>
        <string>Do you prefer $(genre) or $(genre)?</string>
        <choice_count>2</choice_count>
        <replacements>
          <string>genre</string>
        </replacements>
      </question>
    </dynamic>
  </state>
  <state type='actor'>
    <static>
      <question id='1'>
        <string>What is your favorite actor or actress?</string>
      </question>
      <question id='2'>
        <string>Can you tell me some actors or actresses you prefer to watch?</string>
      </question>
      <question id='3'>
        <string>Can you tell me some actors or actresses you like?</string>
      </question>
      <question id='4'>
        <string>Tell me some actors you like.</string>
      </question>
      <question id='5'>
        <string>I'd like to get to know what your actor preferences are.</string>
      </question>
      <question id='6'>
        <string>Please tell me the people you like to see in a movie.</string>
      </question>
    </static>
  </state>
  <state type='director'>
    <static>
      <question id='1'>
        <string>What is your favorite director?</string>
      </question>
      <question id='2'>
        <string>Tell me a director you prefer.</string>
      </question>
    </static>
  </state>
  <state type='mpaa'>
    <static>
      <question id='1'>
        <string>What MPAA rating should this movie be (eg. PG-13, pg, G)?</string>
      </question>
    </static>
  </state>
  <state type='rating'>
    <static>
      <question id='1'>
        <string>How highly rated should the movie be?</string>
      </question>
      <question id='2'>
        <string>Let me know if the movie should be PG13, R, G, etc.</string>
      </question>
      <question id='3'>
        <string>If you are watching this movie with kids, I recommend entering a MPAA rating.</string>
      </question>
      <question id='4'>
        <string>Tell me what rating is appropriate for this movie selection.</string>
      </question>
      <question id='5'>
        <string>If you want a particularly rated movie you need to tell me what you preferences are. (R, PG13, PG, etc.)</string>
      </question>
    </static>
  </state>
  <state type='tell'>
    <static>
      <question id='1' tag='t0'>
        <string>Are you happy with this selection?</string>
      </question>
      <question id='2' tag='t0'>
        <string>Did I do ok with the selection?</string>
      </question>
      <question id='3' tag='t0'>
        <string>Is the selection satisfactory?</string>
      </question>
      <question id='4' tag='t0'>
        <string>Please tell me if this recommendation is good.</string>
      </question>
      <question id='5' tag='tell'>
        <string>I'm thinking about what you might like.</string>
      </question>
    </static>
  </state>
</root>
